    <Style x:Key="AuthBautton" TargetType="{x:Type Button}">
        <Setter Property="Margin" Value="5 0 100 0"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="20" Background="#EB4D4B"  Padding="0 0 0 2"
                            MinHeight="20"  MaxHeight="40" MaxWidth="150" MinWidth="120">

                        <TextBlock Text="Авторизация" VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Foreground="White" FontSize="16" FontFamily="/Cosmic;component/Resources/Fonts/#Montserrat"/>

                        <Border.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <EventTrigger.Actions>
                                    <BeginStoryboard>
                                        <Storyboard Storyboard.TargetProperty="Background.Color">
                                            <ColorAnimation To="#FD7676" Duration="0:0:0:0.2"></ColorAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger.Actions>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <EventTrigger.Actions>
                                    <BeginStoryboard>
                                        <Storyboard Storyboard.TargetProperty="Background.Color">
