    <Style TargetType="{x:Type ListBoxItem}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
        <Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
        <Setter Property="Padding" Value="2,0,0,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                    <Border x:Name="Bd" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="true">
                            <Setter Property="Background" TargetName="Bd" Value="Transparent"/>
                            <Setter Property="Foreground" Value="Transparent"/>
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="true"/>
                                <Condition Property="Selector.IsSelectionActive" Value="false"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Background" TargetName="Bd" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}}"/>
                        </MultiTrigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <DataTemplate x:Key="MusicItemsSmallBox">
        <Grid Width="360" Margin="0 10 0 10" Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="40"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" >
                <Rectangle Width="40" Height="40" RadiusX="10" RadiusY="10">
                    <Rectangle.Effect>
                        <BlurEffect x:Name="MusicPlayRadius" Radius="0"></BlurEffect>
                    </Rectangle.Effect>
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="{Binding Path=ImgData}" Stretch="Uniform"></ImageBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <svgc:SvgViewbox MaxHeight="27" MaxWidth="27" Stretch="Uniform" x:Name="MusicPlay"
                                                                         Opacity="0" Panel.ZIndex="1" Source="../../Resources/Icons/play-circle.svg"/>
            </Grid>

            <Grid Grid.Column="1" Margin="10 0 10 0">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <TextBlock Text="{Binding Path=Title}" TextTrimming="CharacterEllipsis" FontSize="16" Foreground="White"
                                                                       FontFamily="/Cosmic;component/Resources/Fonts/#Montserrat" x:Name="MusicTitle"></TextBlock>
                </Grid>
                <Grid Grid.Row="1" Margin="0 3 0 0">
                    <TextBlock Text="{Binding Path=Artist}" MaxWidth="300" TextTrimming="CharacterEllipsis" FontSize="13" Foreground="#ccc"
                                                                       FontFamily="/Cosmic;component/Resources/Fonts/#Montserrat" x:Name="MusicArtist"></TextBlock>
                </Grid>
            </Grid>
            <Grid Grid.Column="2">
                <TextBlock Text="{Binding Path=TrackTime}" FontSize="12" Foreground="#ccc" VerticalAlignment="Center"
                                                                   FontFamily="/Cosmic;component/Resources/Fonts/#Montserrat"></TextBlock>
            </Grid>
            <Rectangle Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="2" Fill="Transparent">
                <Rectangle.Resources>
                    <converters:Converter x:Key="ParmConverter"></converters:Converter>
                </Rectangle.Resources>
                <Rectangle.InputBindings>
                    <MouseBinding Command="{Binding RelativeSource={RelativeSource AncestorType=ListBox}, Path=DataContext.PlayMusicCommand}" MouseAction="LeftClick">
                        <MouseBinding.CommandParameter>
                            <MultiBinding Converter="{StaticResource ParmConverter}">
                                <Binding RelativeSource="{RelativeSource AncestorType=ListBox}" Path="ItemsSource"></Binding>
                                <Binding></Binding>
                            </MultiBinding>
                        </MouseBinding.CommandParameter>
                    </MouseBinding>
                </Rectangle.InputBindings>
                <Rectangle.Triggers>
                    <EventTrigger RoutedEvent="Rectangle.MouseEnter">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard >
                                    <DoubleAnimation Storyboard.TargetName="MusicPlayRadius" Storyboard.TargetProperty="Radius" To="5" Duration="0:0:0:0.2"></DoubleAnimation>
                                    <DoubleAnimation Storyboard.TargetName="MusicPlay" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0:0.2"></DoubleAnimation>
                                    <ColorAnimation To="#E056FD" Duration="0:0:0:0.2" Storyboard.TargetName="MusicTitle" 
                                                                                            Storyboard.TargetProperty="(Foreground).(SolidColorBrush.Color)"></ColorAnimation>
                                    <ColorAnimation To="#E056FD" Duration="0:0:0:0.2" Storyboard.TargetName="MusicArtist"
